{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Waifu Wallpaper Fetcher",
    "version": "0.3.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "path": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$APPCACHE/**",
          "$RESOURCE/*"
        ]
      },
      "protocol": {
        "asset": true,
        "assetScope": [
          "$APPCACHE/**",
          "$RESOURCE/**"
        ]
      },
      "notification": {
        "all": true
      },
      "window": {
        "all": false,
        "hide": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "cn.Wind-Explorer.freshwaifuwallpaper",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "../src/assets/**",
        "../src/assets/media/*.png"
      ]
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "Preferences",
        "width": 500,
        "height": 300,
        "visible": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    }
  }
}
